<div>
  <h1><%= @user.username %>'s Shouts</h1>
</div>

<div>
  <% if current_user.following?(@user) %>
    <%= button_to "Unfollow", follow_user_path(@user), method: :delete %>
  <% else %>
    <%= button_to "Follow", follow_user_path(@user) %>
  <% end %>
</div>

<div>
  <h3>Following: </h3>
  <%= render @user.followed_users %>
</div>

<div>
  <%= render @shouts %>
</div>